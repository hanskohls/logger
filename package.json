{
  "name": "@scaleleap/logger",
  "description": "A universal logger for Scale Leap applications based on Pino.",
  "license": "MIT",
  "author": {
    "name": "Roman Filippov",
    "email": "roman@scaleleap.com",
    "url": "https://www.scaleleap.com/"
  },
  "homepage": "https://github.com/ScaleLeap/logger/#readme",
  "version": "1.5.3",
  "main": "lib/index.js",
  "bin": {
    "heroku-logs-parser": "lib/bin/heroku-logs-parser.js"
  },
  "files": [
    "/lib"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc --build tsconfig.build.json",
    "clean": "rimraf lib",
    "dev": "ts-node-dev --respawn --transpileOnly src",
    "lint": "eslint --ext ts,js src/ test/",
    "lint:fix": "npm run lint -- --fix",
    "semantic-release": "npx @scaleleap/semantic-release-config",
    "start": "ts-node --transpile-only --pretty src",
    "test": "jest",
    "test:log": "ts-node test/log",
    "test:watch": "jest --watchAll"
  },
  "types": "lib/index.d.ts",
  "dependencies": {
    "@types/pino": "6.0.1",
    "deepmerge": "4.2.2",
    "pino": "6.3.1",
    "pino-caller": "3.0.2",
    "pino-debug": "1.3.0",
    "pino-pretty": "4.0.0",
    "stream-mock": "2.0.5"
  },
  "peerDependencies": {
    "@scaleleap/config": "2.0.0"
  },
  "devDependencies": {
    "@scaleleap/config": "2.0.0",
    "@scaleleap/utils": "1.7.2",
    "@types/jest": "25.2.1",
    "@types/node": "13.13.4",
    "@types/tmp": "0.2.0",
    "danger": "10.2.0",
    "jest": "25.5.3",
    "rimraf": "3.0.2",
    "tmp-promise": "3.0.2",
    "ts-jest": "25.4.0",
    "ts-node": "8.10.2",
    "tsconfigs": "4.0.2",
    "typescript": "3.9.3"
  },
  "keywords": [],
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "extends": "@scaleleap/semantic-release-config"
  }
}
